<?xml version="1.0" encoding="UTF-8"?>

<project name="jpa_enhance_builder">
	<target name="enhance">
		<echo message="Base dir: ${basedir}"/>
		<echo message="Build dir: ${basedir}${file.separator}${build.dir}"/>
		<taskdef name="weave" classname="org.eclipse.persistence.tools.weaving.jpa.StaticWeaveAntTask">
			<classpath><fileset dir="${basedir}${file.separator}WebContent${file.separator}WEB-INF${file.separator}lib"><include name="**/*.jar"/></fileset></classpath>
		</taskdef>
		<weave source="${basedir}${file.separator}${build.dir}${file.separator}classes" target="${basedir}${file.separator}${build.dir}${file.separator}classes" loglevel="FINE">
			<classpath>
				<fileset dir="${basedir}${file.separator}WebContent${file.separator}WEB-INF${file.separator}lib"><include name="**/*.jar"/></fileset>
				<fileset dir="d:${file.separator}dev${file.separator}apache-tomcat-7${file.separator}lib"><include name="**/*.jar"/></fileset>
			</classpath>
		</weave>
	</target>
</project>